{
	"name": "endex-demo",
	"version": "0.0.1",
	"description": "Perpetual DEX w/ FHE for position encryption via CoFHE",
	"scripts": {
		"test": "REPORT_GAS=true hardhat test",
		"clean": "rimraf ./artifacts ./cache ./coverage ./types ./coverage.json ./deployments/localhost",
		"compile": "hardhat compile",
        "postinstall": "ts-node scripts/patch-cofhe-mock.ts",
		"// ------------------- ": "",
		" --- local (start automatically deploys cofhe mock contracts): ---": "",
		"//    -------------------": "",
		"local:start": "hardhat node --port 8545",
		"local:deploy": "hardhat endex-deploy --network localhost",
        "local:price-updater": "hardhat price-updater --network localhost",
        "local:trade": "hardhat endex-trade --network localhost",
        "local:liquidity": "hardhat liquidity-manager --network localhost",
        "local:dashboard": "hardhat user-dashboard --network localhost",
        "local:keeper": "hardhat position-keeper --network localhost",
        "local:miner": "hardhat miner --network localhost"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/EnDexFi/endex-demo.git"
	},
